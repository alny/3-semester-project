@model List<JAAAM_WebClient.WCFService.Match>

@{
    Layout = null;
}

@foreach (JAAAM_WebClient.WCFService.Match m in Model) {

    <div class="modal fade" id="@m.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <form action="/" method="post">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">@m.Name</h4>
                    </div>

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h3>Match details</h3>
                                @foreach (JAAAM_WebClient.WCFService.Map map in m.Maps) {
                                    <p>Map: @map.Name</p>
                                }
                                <p>Format: @m.Format</p>

                                @if (m.Winner != null) {
                                    <p>Winner: @m.Winner.Name</p>
                                }
                                else {
                                    <p>Winner: TBA</p>
                                }



                            </div>

                            <div class="col-md-6">
                                <h3>Team details</h3>


                                @foreach (JAAAM_WebClient.WCFService.Team t in m.Teams.ToList()) {
                                    <div class="col-md-3">
                                        <h4>@t.Name</h4>
                                        @foreach (JAAAM_WebClient.WCFService.Player p in t.Players.ToList()) {
                                        @p.NickName
                                        <br />
                                        }
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button style="margin-left:0px" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </form>

        </div>

    </div>

}

